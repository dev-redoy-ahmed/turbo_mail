# TurboMails Environment Configuration

# Server Configuration
PORT=5000
NODE_ENV=development

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# SMTP Server Configuration
SMTP_PORT=25
SMTP_PORT_SUBMISSION=587
SMTP_HOST=0.0.0.0
API_URL=http://localhost:5000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_WS_URL=ws://localhost:5000

# Supported Domains (comma-separated)
SUPPORTED_DOMAINS=oplex.online,agrovia.store

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Security
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-session-secret-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SMTP_RATE_LIMIT=50

# Email Configuration
EMAIL_EXPIRY_SECONDS=3600
MAX_EMAIL_SIZE=10485760
MAX_EMAILS_PER_IP=10

# Cleanup Configuration
CLEANUP_INTERVAL_MINUTES=10
CLEANUP_BATCH_SIZE=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/turbomail.log

# SSL/TLS Configuration (for production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# ENABLE_TLS=true

# Database Configuration (optional, for persistent storage)
# DATABASE_URL=postgresql://username:password@localhost:5432/turbomail
# MONGODB_URI=mongodb://localhost:27017/turbomail

# External Services (optional)
# WEBHOOK_URL=https://your-webhook-endpoint.com
# ANALYTICS_ID=your-analytics-id
# SENTRY_DSN=your-sentry-dsn

# Docker Configuration
# DOCKER_NETWORK=turbomail-network
# DOCKER_VOLUME_PATH=/var/lib/turbomail

# Production Optimization
# ENABLE_CLUSTERING=true
# WORKER_PROCESSES=auto
# MEMORY_LIMIT=512M
# CPU_LIMIT=1.0